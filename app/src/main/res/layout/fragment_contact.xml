<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <TextView
        android:id="@+id/contactTxtView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Contact Us"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/fblaWebLinkTxtView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="40dp"
        android:text="Link"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/contactTxtView" />

    <ImageButton
        android:id="@+id/facebookButton"
        android:layout_width="64sp"
        android:layout_height="64sp"
        android:padding="10dp"
        android:background="@drawable/facebook"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="120dp"
        app:layout_constraintTop_toBottomOf="@id/fblaWebLinkTxtView" />

    <ImageButton
        android:id="@+id/instaButton"
        android:layout_width="64sp"
        android:layout_height="64sp"
        android:padding="10dp"
        android:background="@drawable/instagram"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="40dp"
        android:layout_marginStart="120dp"
        app:layout_constraintTop_toBottomOf="@id/fblaWebLinkTxtView" />

    <ImageButton
        android:id="@+id/twitterButton"
        android:layout_width="64sp"
        android:layout_height="64sp"
        android:padding="10dp"
        android:background="@drawable/twitter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="120dp"
        app:layout_constraintTop_toBottomOf="@id/facebookButton" />

    <ImageButton
        android:id="@+id/linkedinButton"
        android:layout_width="64sp"
        android:layout_height="64sp"
        android:padding="10dp"
        android:background="@drawable/linkedin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="120dp"
        app:layout_constraintTop_toBottomOf="@id/instaButton" />


    <TextView
        android:id="@+id/qaForm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="40dp"
        android:text="Link"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/twitterButton" />

</androidx.constraintlayout.widget.ConstraintLayout>